#!groovy

@Library("Infrastructure")

import uk.gov.hmcts.contino.AppPipelineDsl


def type = "java"
def product = "rd"
def component = "professional-api"
/* The below Key Vault secrets will be used for functional and smoke tests */
def secrets = [
        's2s-${env}': [
                secret('microservicekey-rd-professional-api', 'S2S_SECRET'),
                secret('microservicekey-rd-professional-api', 'BEFTA_S2S_CLIENT_SECRET')
        ],
        'rd-${env}': [
                secret('OAUTH2-CLIENT-SECRET', 'OAUTH2_CLIENT_SECRET'),
                secret('OAUTH2-CLIENT-AUTH', 'OAUTH2_CLIENT_AUTH'),
                secret('OAUTH2-CLIENT-ID', 'OAUTH2_CLIENT_ID'),
                secret('LD-SDK-KEY', 'LD_SDK_KEY'),
                secret("s2s-secret",'S2S_SECRET')
        ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [$class     : 'AzureKeyVaultSecret',
     secretType : 'Secret',
     name       : secretName,
     version    : '',
     envVariable: envVar
    ]
}

def vaultOverrides = [
    'preview' : 'aat',
    'spreview': 'saat'
]

withPipeline(type, product, component) {
  
    overrideVaultEnvironments(vaultOverrides)
    loadVaultSecrets(secrets)

    enableDbMigration('rd')
    disableLegacyDeployment()
    enableAksStagingDeployment()

    //BEFTA related env variables only for PR against AAT
    env.BEFTA_S2S_CLIENT_ID= "rd_professional_api"
    env.S2S_URL = "http://rpe-service-auth-provider-aat.service.core-compute-aat.internal"
    env.BEFTA_RESPONSE_HEADER_CHECK_POLICY= "JUST_WARN"
    env.OAUTH2_REDIRECT_URI= "https://rd-professional-api-aat.service.core-compute-aat.internal/oauth2redirect"
    env.OAUTH2_ACCESS_TOKEN_TYPE= "OIDC"
    env.OAUTH2_SCOPE_VARIABLES= "openid profile roles manage-user create-user search-user"
    env.DEFINITION_STORE_HOST= "http://rd-professional-api-aat.service.core-compute-aat.internal"
    env.IDAM_URL = "https://idam-api.aat.platform.hmcts.net"
    //

    before('functionalTest:preview') {
        env.execution_environment = "preview"
    }

    before('functionalTest:aat') {
        env.execution_environment = "aat"
    }

    after('integrationTest:preview') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/site/serenity/**/*'
    }

    after('integrationTest:aat') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/site/serenity/**/*'
    }

    after('functionalTest:preview') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/build/cucumber/**/*'
    }

    after('functionalTest:aat') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/build/cucumber/**/*'
    }

    enablePactAs([
            AppPipelineDsl.PactRoles.CONSUMER
    ])

}
